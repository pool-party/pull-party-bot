root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.kt]
# ktlint
ktlint_standard_trailing-comma-on-call-site = disabled
ktlint_standard_trailing-comma-on-declaration-site = disabled # BUG: unnecessary trailing commas, needs , before ; in enum
ktlint_standard_wrapping = disabled # BUG: alignment of ${} in """
